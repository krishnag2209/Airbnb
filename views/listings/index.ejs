    </div>
     <div class="filter">
        <div><i class="fa-solid fa-house"></i></div>
            <p>Home</p>
        </i>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
              <p>Cities</p>
        </i>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-fire-flame-simple"></i></div>
            <p>Trendings</p>
        </i>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
              <p>Rooms</p>
        </i>
    </div>
     <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </i>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
